/**index.wxss**/
.bg {
    background: url('https://www.dzh-labs.com/dzh-labs/static/images/page_bg.jpg') no-repeat;
    position: fixed;
    height: 100%;
    width: 100%;
    display:flex; 
    flex-direction:column;
    background-size: 100% 100%;
}

.content_container {
    flex-direction: row;
    margin: 60rpx auto 30rpx;
    overflow: hidden;
    position: absolute;
    top: 48rpx;
    left: 50rpx;
    right: 50rpx;
    bottom: 70rpx;
    border-radius: 20rpx;
    background-image: url('https://www.dzh-labs.com/dzh-labs/static/images/opacity_bg.png');
    padding: 20px 0px;
}

.page-title {
  padding: 26rpx 20rpx;
  margin: 0 0 30rpx 0;
  font-size: 30rpx;
  color: #8c3f00;
  text-align: center;
  font-weight: bold;
  border-bottom: 2rpx solid #d8763a;
}
.page-title text {
  height:80rpx;
  display:block;
  overflow:hidden;
}
.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
  padding:0rpx 20rpx;
}
.item {
  display: flex;
  padding: 20rpx 0rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
  margin-bottom: 10px;
}
.item .cover {
  width: 100px;
  height:88px;
  margin-right:10px;
}
.item .poster {
  width: 100%;
  height: 100%;
  /* width: 128rpx;
  height: 128rpx; */
  margin-right: 20rpx;
}
.item .meta {
  flex: 1;
}
.item .meta .title,.item .meta .sub-title {
  display: block;
  margin-bottom: 15rpx;
}
.item .meta .title {
  color: #8c3f00;
  height: auto;
  line-height: 40rpx;
  margin: 0 0 10rpx 0;
  font-size: 30rpx;
  font-weight: bold;
}
.item .meta .sub-title {
  color: #728087;
  font-size: 24rpx;
  line-height: 36rpx;
}

.no-data{
  font-size:28rpx;
  color:rgb(128, 128, 128);
  padding:0rpx 20rpx;
  margin-bottom: 20rpx;
}

.tabbar_box{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 120rpx;
    border-top: 1rpx solid gray; 
}
 
.tabbar_nav{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
    height: 100%;
}
 
.tabbar_icon{
    width: 61rpx;
    height: 61rpx;
}

