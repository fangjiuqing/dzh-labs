.board {
    flex-direction: row;
    margin: 346rpx auto 0rpx;
    width: 315rpx;
    overflow: hidden;
    line-height:44rpx;
    height:44rpx;
    padding-left: 46rpx;
    padding-right: 20rpx;
    border-bottom: 2px solid #a5aa8b;
    background: url("https://www.dzh-labs.com/m/needs/notice_icon.png") no-repeat;
    background-size: 34rpx auto;
}

.swiper_container {
  height: 55rpx;
  width: 80vw;
}

.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
  color: #8f360b;
  font-weight: bold;
}

.view {
    position: absolute;
    width: 480rpx;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 5px;
    bottom: 130rpx;
    left: 37%;
    margin: 0 0 0 -232rpx;
    display: none;
}

.view-cont {
    margin: 10px 15px 0px;
    padding: 0 0 10px 0;
}

.view-cont .p {
    overflow: hidden;
    font-size: 14px;
}

.view-cont .p .label {
    float: left;
    height: 24px;
    line-height: 24px;
    width: 58px;
    color: #8f360b;
}

.view-cont p .text.add {
    line-height: 20px;
    margin: 2px 0 0 0;
}

.view-cont .text {
    display: block;
    margin: 0 0 0 58px;
    line-height: 24px;
    color: #666;
}

.after {
    position: absolute;
    content: "";
    width: 0;
    height: 0;
    border-top: 8px solid #fff;
    border-right: 8px solid transparent;
    border-bottom: 8px solid transparent;
    border-left: 8px solid transparent;
    z-index: 2;
    left: 50%;
    margin: 0 0 0 -8px;
    bottom: -15px;
}
