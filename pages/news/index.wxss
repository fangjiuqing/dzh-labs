.bg {
    background: url('https://www.dzh-labs.com/dzh-labs/static/images/body_bg.jpg') no-repeat;
    position: fixed;
    height: 100%;
    width: 100%;
    display:flex; 
    flex-direction:column;
    background-size: 100% 100%;
}
.swiper__container{
    height: 11rem;
}
.swiper__desc{
    position: absolute;
    width:100%;
    bottom: 0;
    padding: 10rpx;
    background-color: rgba(0,0,0,0.5);
    color: #fff;
    font-size: 28rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.swiper__item{
    display: block;
    width: 20rem;
    height: 11rem;
}

.swiper__id{
    float: right;
    padding-right: 20rpx;
    font-weight: 700;
}

/* header 部分导航 */
.header{
    width: 100%;
    background-color: #7ca0ec;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    height: 66rpx;
    position: relative;
    color: #fff;
    font-weight: bold;
}
.sv__container{
    width: 90%;
    height: 64rpx;
    white-space: nowrap;
    padding: 0px 6px;
}
.sv__item{
    padding: 10rpx 14rpx;
    display: inline-block;
}
.sv-manager{
    /* padding-left:20rpx; */
    width: 1rem;
    height: 1rem;
    vertical-align: center;
}

.vedio_container {
    flex-direction: row;
    margin: 80rpx auto 20rpx;
    border: 6px solid #f3a263;
    border-radius: 10px;
    width: 300px;
    height: 168px;
}

